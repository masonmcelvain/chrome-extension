{
   "name": "hop",
   "version": "1.1.13",
   "description": "An icon-first bookmark manager",
   "main": "src/public/index.tsx",
   "packageManager": "pnpm@7.5.2",
   "engines": {
      "node": ">= 16.17.1"
   },
   "scripts": {
      "dev:chrome": "env-cmd -e dev-chrome ./build.ts",
      "dev:firefox": "env-cmd -e dev-firefox ./build.ts",
      "preview:firefox": "env-cmd -e preview-firefox web-ext run",
      "build": "conc \"pnpm build:chrome\" \"pnpm build:firefox\"",
      "build:chrome": "env-cmd -e prod-chrome ./build.ts",
      "build:firefox": "env-cmd -e prod-firefox ./build.ts",
      "lint": "eslint .",
      "lint:fix": "eslint --fix .",
      "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}'",
      "test": "playwright test",
      "type-check": "tsc --project src/ --noEmit && tsc --project tests/ --noEmit",
      "clean": "rm -rf dist playwright-report tmp-web-ext-profile"
   },
   "author": "Mason McElvain",
   "license": "MIT",
   "dependencies": {
      "@chakra-ui/react": "^1.6.8",
      "@emotion/react": "^11.4.1",
      "@emotion/styled": "^11.3.0",
      "framer-motion": "^4.1.17",
      "react": "^17.0.2",
      "react-dnd": "^14.0.2",
      "react-dnd-html5-backend": "^14.0.0",
      "react-dom": "^17.0.2",
      "react-feather": "^2.0.9",
      "zod": "^3.20.2",
      "zustand": "^4.2.0"
   },
   "devDependencies": {
      "@babel/core": "^7.13.14",
      "@playwright/test": "^1.28.1",
      "@types/node": "^18.0.0",
      "@types/react": "^17.0.3",
      "@types/react-dom": "^17.0.3",
      "@types/webextension-polyfill": "^0.10.0",
      "@typescript-eslint/eslint-plugin": "^4.29.3",
      "@typescript-eslint/parser": "^4.29.3",
      "concurrently": "^7.1.0",
      "dotenv": "^16.0.3",
      "env-cmd": "^10.1.0",
      "esbuild": "^0.16.10",
      "esbuild-plugin-copy": "^2.0.1",
      "eslint": "^7.32.0",
      "eslint-config-prettier": "^8.5.0",
      "eslint-plugin-react": "^7.24.0",
      "eslint-plugin-react-hooks": "^4.6.0",
      "prettier": "^2.6.2",
      "ts-node": "^10.9.1",
      "typescript": "^4.9.4",
      "web-ext": "^7.4.0",
      "webextension-polyfill": "^0.10.0"
   }
}
