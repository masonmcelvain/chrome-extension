{
   "name": "hop",
   "version": "1.1.13",
   "description": "An icon-first bookmark manager",
   "main": "src/public/index.tsx",
   "packageManager": "pnpm@8.3.1",
   "engines": {
      "node": "19.4.0"
   },
   "scripts": {
      "dev:chrome": "env-cmd -e dev-chrome ./build.ts",
      "dev:firefox": "env-cmd -e dev-firefox ./build.ts",
      "preview:firefox": "env-cmd -e preview-firefox web-ext run",
      "build": "conc \"pnpm build:chrome\" \"pnpm build:firefox\"",
      "build:chrome": "env-cmd -e prod-chrome ./build.ts",
      "build:firefox": "env-cmd -e prod-firefox ./build.ts",
      "lint": "eslint .",
      "lint:fix": "eslint --fix .",
      "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}'",
      "prepare": "husky install",
      "test": "playwright test",
      "type-check": "tsc --project src/ --noEmit && tsc --project tests/ --noEmit"
   },
   "author": "Mason McElvain",
   "license": "MIT",
   "dependencies": {
      "@chakra-ui/react": "2.5.5",
      "@emotion/react": "11.10.6",
      "@emotion/styled": "11.10.6",
      "framer-motion": "6.5.1",
      "react": "18.2.0",
      "react-dnd": "16.0.1",
      "react-dnd-html5-backend": "16.0.1",
      "react-dom": "18.2.0",
      "react-feather": "2.0.10",
      "zod": "3.21.4",
      "zustand": "4.3.7"
   },
   "devDependencies": {
      "@babel/core": "7.21.4",
      "@playwright/test": "1.31.2",
      "@types/node": "18.16.0",
      "@types/react": "18.2.0",
      "@types/react-dom": "18.2.0",
      "@types/webextension-polyfill": "0.10.0",
      "@typescript-eslint/eslint-plugin": "5.59.1",
      "@typescript-eslint/parser": "5.59.1",
      "concurrently": "8.0.1",
      "dotenv": "16.0.3",
      "env-cmd": "10.1.0",
      "esbuild": "0.17.18",
      "eslint": "8.39.0",
      "eslint-config-prettier": "8.8.0",
      "eslint-plugin-react": "7.32.2",
      "eslint-plugin-react-hooks": "4.6.0",
      "husky": "8.0.3",
      "lint-staged": "13.2.1",
      "prettier": "2.8.8",
      "ts-node": "10.9.1",
      "typescript": "5.0.4",
      "web-ext": "7.6.2",
      "webextension-polyfill": "0.10.0"
   },
   "lint-staged": {
      "*": "prettier --write --ignore-unknown"
   }
}
