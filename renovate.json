{
   "$schema": "https://docs.renovatebot.com/renovate-schema.json",
   "extends": ["config:base"],
   "packageRules": [
      {
         "matchPackagePatterns": ["framer-motion"],
         "allowedVersions": "<7"
      },
      {
         "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
         "automerge": true
      }
   ],
   "rangeStrategy": "pin",
   "schedule": ["every weekend"],
   "timezone": "America/Los_Angeles"
}
